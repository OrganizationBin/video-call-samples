<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#000000"
             android:layout_gravity="center"
             android:id="@+id/cl_control_toolbox"
             tools:ignore="ContentDescription"
             tools:context="com.pano.rtc.demo.WhiteboardToolbox">

    <ImageView
        android:id="@+id/btn_tb_select"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_tb_path"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_path"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_select"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_line"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_line"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_path"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_rect"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_rect"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_line"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_ellipse"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_ellipse"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_rect"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_text"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_text"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_ellipse"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_eraser"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_eraser"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_text"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_undo"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_undo"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_eraser"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_redo"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_redo"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_undo"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

    <ImageView
        android:id="@+id/btn_tb_snapshot"
        android:layout_width="@dimen/toolbox_button_size"
        android:layout_height="@dimen/toolbox_button_size"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_tb_snapshot"
        app:layout_constraintStart_toEndOf="@+id/btn_tb_redo"
        app:layout_constraintTop_toTopOf="@+id/btn_tb_select" />

</androidx.constraintlayout.widget.ConstraintLayout>
