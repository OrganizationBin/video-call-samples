<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#000000"
             android:layout_gravity="center"
             android:id="@+id/cl_control_page"
             tools:ignore="ContentDescription"
             tools:context="com.pano.rtc.demo.basicvideocall.ControlPage">

    <ImageView
        android:id="@+id/btn_page_prev"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_page_prev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_page"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:text="1/1"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorButton"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/btn_page_prev"
        app:layout_constraintTop_toTopOf="@+id/btn_page_prev" />

    <ImageView
        android:id="@+id/btn_page_next"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_page_next"
        app:layout_constraintStart_toEndOf="@+id/text_page"
        app:layout_constraintTop_toTopOf="@+id/btn_page_prev" />

    <ImageView
        android:id="@+id/btn_page_add"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_page_add"
        app:layout_constraintStart_toEndOf="@+id/btn_page_next"
        app:layout_constraintTop_toTopOf="@+id/btn_page_prev" />

    <ImageView
        android:id="@+id/btn_page_remove"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_page_remove"
        app:layout_constraintStart_toEndOf="@+id/btn_page_add"
        app:layout_constraintTop_toTopOf="@+id/btn_page_prev" />

</androidx.constraintlayout.widget.ConstraintLayout>
